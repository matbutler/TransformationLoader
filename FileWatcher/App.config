<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,     log4net"/>
  </configSections>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/>
    </startup>
  <appSettings>
    <add key="WatchPath" value="c:\temp\test"/>
  </appSettings>
  <connectionStrings>
    <add name="FileWatcher" connectionString="Server=WORK_PC\SQLEXPRESS;Database=TestLoad;Trusted_Connection=True;" providerName="System.Data.SqlClient"/>
  </connectionStrings>
  <log4net>
    <appender name="TraceLog" type="log4net.Appender.RollingFileAppender">
      <file type="log4net.Util.PatternString">
        <conversionPattern value="App_Data\\logs\\log-%date{yyyy.MM.dd}.log"/>
      </file>
      <appendToFile value="true"/>
      <rollingStyle value="Size"/>
      <maxSizeRollBackups value="-1"/>
      <maximumFileSize value="50GB"/>
      <staticLogFileName value="true"/>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
      </layout>
    </appender>
    <root>
      <level value="DEBUG"/>
      <appender-ref ref="TraceLog"/>
    </root>
  </log4net>
</configuration>
